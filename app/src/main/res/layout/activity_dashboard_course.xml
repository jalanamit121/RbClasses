<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOne"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/classDetailImageMyProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/rblogo"
                />

            <TextView
                android:id="@+id/studentNameMyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/classDetailImageMyProfile"
                android:text="Sambhav Jain"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_email"
                android:layout_below="@id/studentNameMyProfile"
                android:layout_toLeftOf="@id/email"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/proximanovaregular"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/studentNameMyProfile"
                android:text="Phone No. : 8209065307"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_phone"
                android:layout_marginTop="5dp"
                android:layout_below="@id/email"
                android:layout_toLeftOf="@id/mobile"/>
            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/proximanovaregular"
                android:layout_below="@id/email"
                android:text="Roll No. : 18/307"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                 />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_tick"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/email"
                android:layout_toRightOf="@id/mobile"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:layout_below="@id/cardViewOne"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <include
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>