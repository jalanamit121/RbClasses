<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView
    tools:context=".ResetPassWordActivity"
    android:background="@color/bg_color"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


  <RelativeLayout
      android:layout_height="match_parent"
      android:layout_width="match_parent">





  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:paddingRight="24dp"
      android:paddingTop="66dp"
      android:paddingLeft="24dp"
      android:orientation="vertical">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/rb_trans"
        android:layout_gravity="center"
        />


  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="20dp">

  <TextView
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textSize="22sp"
      android:textColor="#3c4b5d"
      android:text="Reset Password"
      android:textStyle="bold"
      android:gravity="center"
      android:fontFamily="@font/proximanovaregular"/>



</LinearLayout>


  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:gravity="center"
      android:padding="12dp">

  <EditText
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textSize="18sp"
      android:textColor="@color/edit_text"
      android:fontFamily="@font/proximanovaregular"
      android:inputType="text"
      android:textColorHint="@color/edit_text"
      android:hint="Enter OTP"
      android:id="@+id/editTextResetOtp"/>

</LinearLayout>


  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:padding="12dp">

  <EditText
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textSize="18sp"
      android:textColor="@color/edit_text"
      android:fontFamily="@font/proximanovaregular"
      android:inputType="textPassword"
      android:textColorHint="@color/edit_text"
      android:hint="New Password"
      android:id="@+id/editTextNewPassword"/>

</LinearLayout>


  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:padding="12dp">

  <EditText
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textSize="18sp"
      android:textColor="@color/edit_text"
      android:fontFamily="@font/proximanovaregular"
      android:inputType="textPassword"
      android:textColorHint="@color/edit_text"
      android:hint="Re Enter Password"
      android:id="@+id/editTextRePassword"/>

</LinearLayout>


  <Button
      android:background="@drawable/circularbluebordersolid"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginBottom="14dp"
      android:textColor="@color/white"
      android:layout_gravity="center"
      android:text="RESET PASSWORD"
      android:fontFamily="@font/proximanovaregular"
      android:layout_marginTop="24dp"
      android:padding="16dp"
      android:id="@+id/buttonReset"/>

</LinearLayout>

  <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progressBar" android:visibility="gone" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>

</RelativeLayout>

</ScrollView>