<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".YouTubeVideoList" style="@style/parent.contentLayout" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/refresh_list">


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">


    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">


    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/title_bar_home" android:layout_alignParentTop="true" android:background="@drawable/header_layout" android:visibility="gone">

    <ImageView android:layout_height="30dp" android:layout_width="30dp" android:id="@+id/WebsiteHome" android:src="@drawable/ic_baseline_menu_24" android:layout_marginLeft="20dp" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_marginStart="20dp" android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>

    <ImageView android:layout_height="30dp" android:layout_width="30dp" android:id="@+id/sideBarHome" android:src="@drawable/rblogo" android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:layout_toRightOf="@id/WebsiteHome"/>

    <ImageView android:layout_height="30dp" android:layout_width="30dp" android:id="@+id/img_share" android:src="@drawable/ic_share_black_24dp" android:layout_marginLeft="20dp" android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginEnd="20dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

    <TextView style="@style/viewParent.headerText" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/titleHome" android:textStyle="bold" android:textSize="22sp" android:textColor="@android:color/black" android:text="RB Classes" android:layout_centerInParent="true"/>

</RelativeLayout>


    <RelativeLayout android:layout_height="120dp" android:layout_width="match_parent" android:id="@+id/today_classes" android:background="@color/white" android:visibility="gone" android:layout_marginBottom="10dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/noclasses" android:textStyle="bold" android:textSize="16dp" android:textColor="@color/gradientViolet" android:text="No Class Today" android:layout_centerInParent="true" android:fontFamily="@font/proximanovaregular"/>

</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView android:layout_height="match_parent" android:layout_width="wrap_content" android:id="@+id/all_liveClasses" android:layout_marginLeft="5dp" android:layout_marginBottom="65dp" android:layout_marginTop="4dp" android:layout_marginRight="5dp" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" android:nestedScrollingEnabled="false"/>

</LinearLayout>

</RelativeLayout>

</ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include android:layout_height="match_parent" android:layout_width="match_parent" android:layout_alignParentBottom="true" layout="@layout/footer"/>

</RelativeLayout>