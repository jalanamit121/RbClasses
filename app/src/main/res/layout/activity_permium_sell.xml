<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".PermiumSellActivity" android:background="@color/bg_color" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


  <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">


  <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent">


  <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content">

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone" android:id="@+id/course_id"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone" android:id="@+id/user_id"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone" android:id="@+id/amount_org_id"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone" android:id="@+id/org_id" android:text="WB_004"/>

</RelativeLayout>


  <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:layout_marginBottom="65dp">

  <ImageView
      android:layout_height="200dp"
      android:layout_width="match_parent"
      android:id="@+id/payment_image"
      android:padding="16dp"
      android:elevation="2dp"
      android:layout_margin="16dp"/>

  <TextView
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:id="@+id/bucket_id"
      android:layout_marginBottom="10dp"
      android:layout_below="@id/payment_image"
      android:textColor="@color/edit_text" android:layout_centerHorizontal="true" android:gravity="center" android:textSize="15sp"/>


  <RelativeLayout android:background="@drawable/shadow" android:layout_height="wrap_content" android:layout_width="380dp" android:id="@+id/branch_video" android:padding="10dp" android:elevation="2dp" android:layout_below="@id/bucket_id" android:layout_marginRight="5dp" android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginStart="5dp">

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/gec_branchname" android:text="Course Name" android:textColor="@color/edit_text" android:textSize="18sp" android:layout_marginStart="10dp" android:fontFamily="@font/proximanovaregular"/>


  <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/layout_video" android:layout_below="@id/gec_branchname">

  <ImageView android:layout_height="15dp" android:layout_width="15dp" android:id="@+id/img_film" android:src="@drawable/ic_film" android:layout_marginTop="10dp" android:layout_marginLeft="30dp"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txt_total_video" android:text="Total Video - " android:textColor="@color/edit_text" android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:fontFamily="@font/proximanovaregular" android:layout_toRightOf="@id/img_film"/>

  <ImageView android:layout_height="15dp" android:layout_width="15dp" android:id="@+id/img_document" android:src="@drawable/ic_portable_document_format" android:layout_below="@id/img_film" android:layout_marginTop="5dp" android:layout_marginLeft="30dp"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txt_total_document" android:text="Total Video - " android:layout_below="@id/txt_total_video" android:textColor="@color/edit_text" android:layout_marginLeft="10dp" android:fontFamily="@font/proximanovaregular" android:layout_toRightOf="@id/img_document"/>

</RelativeLayout>

  <View android:background="#78A2E9" android:layout_height="2dp" android:layout_width="match_parent" android:layout_below="@id/layout_video" android:layout_marginTop="10dp"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txt_price" android:text="Price" android:padding="16dp" android:layout_below="@id/layout_video" android:textColor="@color/edit_text" android:textSize="14dp"/>

  <ImageView android:layout_height="10dp" android:layout_width="10dp" android:id="@+id/img_rupee1" android:src="@drawable/ic_rupee" android:layout_below="@id/layout_video" android:layout_marginTop="20dp" android:layout_toRightOf="@id/txt_price"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txt_discount" android:text="Price" android:padding="16dp" android:layout_below="@id/layout_video" android:textColor="@color/edit_text" android:textSize="14dp" android:layout_toRightOf="@id/txt_price"/>

  <ImageView android:layout_height="10dp" android:layout_width="10dp" android:id="@+id/img_rupee" android:src="@drawable/ic_rupee" android:layout_below="@id/layout_video" android:layout_marginTop="20dp" android:layout_toRightOf="@id/txt_discount"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txt_actual_price" android:text="Price" android:padding="16dp" android:layout_below="@id/layout_video" android:textColor="@color/edit_text" android:textSize="14dp" android:layout_toRightOf="@id/txt_discount"/>

</RelativeLayout>

</RelativeLayout>

</RelativeLayout>

</ScrollView>


  <LinearLayout android:background="@drawable/bottom_layout" android:layout_height="50dp" android:layout_width="match_parent" android:id="@+id/layout_footer" android:layout_marginBottom="50dp" android:weightSum="1" android:layout_alignParentBottom="true">


  <LinearLayout android:layout_height="match_parent" android:layout_width="wrap_content" android:id="@+id/layout_pay" android:layout_weight="1">

  <Button android:background="@drawable/payment_btn" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/pay_btn" android:text="Pay" android:textColor="@color/white" android:fontFamily="@font/proximanovaregular"/>

</LinearLayout>


  <LinearLayout android:layout_height="match_parent" android:layout_width="wrap_content" android:visibility="gone" android:id="@+id/layout_demo" android:layout_weight="1">

  <Button android:background="@drawable/demo_btn" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/view_demo" android:text="View Demo" android:textColor="@color/white"/>

</LinearLayout>

</LinearLayout>

  <include android:layout_height="match_parent" android:layout_width="match_parent" layout="@layout/footer"/>

</RelativeLayout>