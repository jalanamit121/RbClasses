<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".PermiumSellActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/amount_org_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/org_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WB_004"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp">

            <ImageView
                android:id="@+id/payment_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:elevation="2dp"
                android:padding="16dp"
                android:src="@drawable/frutorials" />
            <TextView
                android:id="@+id/bucket_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/edit_text"
                android:layout_below="@id/payment_image"/>



            <RelativeLayout
                android:id="@+id/branch_video"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bucket_id"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shadow"
                android:elevation="2dp">
                <TextView
                    android:id="@+id/gec_branchname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Course Name"
                    android:textColor="@color/edit_text"
                    android:fontFamily="@font/proximanovaregular"
                    android:textSize="18sp" />
                <RelativeLayout
                    android:id="@+id/layout_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gec_branchname">


                <ImageView
                    android:id="@+id/img_film"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_film"/>
                <TextView
                    android:id="@+id/txt_total_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_toRightOf="@id/img_film"
                    android:textColor="@color/edit_text"
                    android:text="Total Video - "/>
                <ImageView
                    android:id="@+id/img_document"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/img_film"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_portable_document_format"/>
                <TextView
                    android:id="@+id/txt_total_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/proximanovaregular"
                    android:textColor="@color/edit_text"
                    android:layout_toRightOf="@id/img_document"
                    android:layout_below="@id/txt_total_video"
                    android:text="Total Video - "/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/layout_video"
                    android:background="#78A2E9"/>
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_below="@id/layout_video"
                    android:text="Price"
                    android:textColor="@color/edit_text"
                    android:textSize="14dp" />
                <ImageView
                    android:id="@+id/img_rupee1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_rupee"
                    android:layout_below="@id/layout_video"
                    android:layout_toRightOf="@id/txt_price" />

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_price"
                    android:padding="16dp"
                    android:layout_below="@id/layout_video"
                    android:text="Price"
                    android:textColor="@color/edit_text"
                    android:textSize="14dp" />
                <ImageView
                    android:id="@+id/img_rupee"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_rupee"
                    android:layout_below="@id/layout_video"
                    android:layout_toRightOf="@id/txt_discount" />

                <TextView
                    android:id="@+id/txt_actual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_discount"
                    android:layout_below="@id/layout_video"
                    android:padding="16dp"
                    android:text="Price"
                    android:textColor="@color/edit_text"
                    android:textSize="14dp" />

            </RelativeLayout>
        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
<LinearLayout
    android:id="@+id/layout_footer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="50dp"
   android:layout_alignParentBottom="true"
    android:weightSum="1"
    android:background="@drawable/bottom_layout">
    <LinearLayout
        android:id="@+id/layout_pay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <Button
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/proximanovaregular"
        android:background="@drawable/payment_btn"
        android:text="Pay" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_demo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_weight="1">
    <Button
        android:id="@+id/view_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/demo_btn"

        android:text="View Demo" />

    </LinearLayout>

</LinearLayout>
    <include
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>