<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:id="@+id/branch_live1"
    android:padding="10dp"
android:elevation="4dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
android:clickable="true"
android:background="@drawable/shadow"
android:layout_marginRight="15dp">
<RelativeLayout
    android:id="@+id/branch_live"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/question_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_edit"/>
    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_toRightOf="@id/question_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="question"/>
    <ImageView
        android:id="@+id/like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:layout_toLeftOf="@id/text_like"
        android:layout_below="@id/question_image"
        android:src="@drawable/ic_like"/>
    <TextView
        android:id="@+id/text_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="15sp"
        android:layout_toLeftOf="@id/text_comments"
        android:layout_below="@id/text_question"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="10"/>
    <TextView
        android:id="@+id/text_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_below="@id/text_question"
        android:layout_marginStart="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text=""/>
    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_below="@id/text_question"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text=""/>


</RelativeLayout>
</RelativeLayout>
