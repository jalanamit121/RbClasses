<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".ForgetPasswordActivity" android:padding="16dp" android:background="@color/bg_color" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="16dp" android:textStyle="bold" android:textColor="#111" android:layout_centerInParent="true" android:text="FORGET PASSWORD" android:id="@+id/forget_text"/>


  <LinearLayout android:padding="18dp" android:background="@drawable/circularbordersolid" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/layout_forget" android:layout_below="@id/forget_text" android:elevation="8dp" android:gravity="center" android:layout_marginTop="20dp">

  <EditText android:background="@null" android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="14sp" android:textColor="@color/edit_text" android:id="@+id/editTextre_Password" android:inputType="textPassword" android:textColorHint="@color/edit_text" android:hint=" Mobile no" android:fontFamily="@font/proximanovaregular"/>

</LinearLayout>

  <Button android:padding="16dp" android:background="@drawable/circularbluebordersolid" android:layout_height="wrap_content" android:layout_width="150dp" android:textColor="@color/white" android:layout_centerInParent="true" android:text="Submit" android:id="@+id/buttonForget" android:layout_below="@id/layout_forget" android:layout_marginTop="24dp" android:fontFamily="@font/proximanovaregular" android:layout_marginBottom="14dp"/>

</RelativeLayout>