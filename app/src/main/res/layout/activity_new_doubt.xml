<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewDoubtActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:paddingRight="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:gravity="center"
                android:text="Post Your Doubt"
                android:textColor="#3c4b5d"
                android:textSize="22sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circularbordersolid"
            android:gravity="center"
            android:padding="18dp">

            <EditText
                android:id="@+id/editTextQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/proximanovaregular"
                android:hint="Question Title"
                android:textColorHint="@color/edit_text"
                android:inputType="text|textMultiLine"
                android:maxLines="10"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circularbordersolid"
            android:orientation="horizontal"
            android:padding="18dp">

            <EditText
                android:id="@+id/editTextQuestionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/proximanovaregular"
                android:hint="Description"
                android:inputType="text|textMultiLine"
                android:maxLines="10"
                android:textColorHint="@color/edit_text"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/circularbluebordersolidmiddle"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="18dp">

            <EditText
                android:id="@+id/editTextUserid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/proximanovaregular"
                android:hint="Userid"
                android:inputType="text"
                android:textColorHint="@color/edit_text"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circularbordersolidbottom"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="18dp">

            <EditText
                android:id="@+id/editTextDocumentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/proximanovaregular"
                android:hint="DocumentId"
                android:inputType="text"
                android:textColorHint="@color/edit_text"
                android:textSize="14sp" />

        </LinearLayout>


        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/circularbluebordersolid"
            android:fontFamily="@font/proximanovaregular"
            android:text="Ask Doubt"
            android:layout_gravity="center"
            android:textColor="@color/white" />





    </LinearLayout>


</RelativeLayout>