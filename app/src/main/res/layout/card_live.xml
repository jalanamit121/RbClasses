<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        app:cardCornerRadius="16dp"
        card_view:cardBackgroundColor="@color/whiteBodyColor"
        card_view:cardPreventCornerOverlap="false"
        android:layout_margin="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/youtubeThubnail"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:src="@drawable/frutorials"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/live_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:visibility="visible"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#EB3939"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/youtubeThubnail"
                android:layout_below="@id/live_status"
                android:textColor="@color/edit_text"
                android:layout_marginLeft="5dp"
                android:text="YouTube Video"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/youtubeThubnail"
                android:layout_below="@id/title"
                android:textColor="@color/edit_text"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:text="YouTube Video"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/youtubeThubnail"
                android:layout_below="@id/teacher"
                android:textColor="@color/edit_text"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:text="YouTube Video"
                android:textStyle="italic"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/date"
                android:visibility="gone"
                android:layout_below="@id/teacher"
                android:textColor="@color/edit_text"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:text="YouTube Video"
                android:textStyle="italic"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/youtubeThubnail"
                android:layout_marginTop="-40dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
