<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout tools:context=".NotificationActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


  <RelativeLayout
      android:layout_height="120dp"
      android:layout_width="match_parent"
      android:visibility="gone"
      android:background="@color/white"
      android:layout_marginBottom="10dp"
      android:id="@+id/today_classes">

  <TextView
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:id="@+id/noclasses"
      android:textColor="@color/gradientViolet"
      android:textStyle="bold"
      android:textSize="16dp"
      android:fontFamily="@font/proximanovaregular"
      android:layout_centerInParent="true"
      android:text="No Current Affairs Today"/>

</RelativeLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:layout_marginBottom="65dp"
      android:id="@+id/sek_home_recycle"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      android:nestedScrollingEnabled="false"
      android:layout_marginTop="5dp"/>

  <include
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      layout="@layout/footer"/>

</RelativeLayout>