  <RelativeLayout android:id="@+id/layout1" android:layout_height="wrap_content" android:layout_width="match_parent" android:visibility="visible">

  <ImageView android:id="@+id/course_image" android:layout_height="100dp" android:layout_width="100dp" android:src="@drawable/android_developer" android:layout_margin="5dp"/>

  <TextView android:id="@+id/txt_course" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginBottom="10dp" android:layout_marginLeft="15dp" android:textStyle="bold" android:textSize="18sp" android:layout_toRightOf="@id/course_image" android:textColor="#0A2773" android:text="SSC"/>

  <ImageView android:layout_marginTop="10dp" android:id="@+id/img_rupee" android:layout_height="10dp" android:layout_width="10dp" android:visibility="visible" android:src="@drawable/ic_rupee" android:layout_marginLeft="5dp" android:layout_below="@id/course_image" android:layout_toLeftOf="@id/txt_discount"/>

  <TextView android:layout_marginTop="5dp" android:id="@+id/txt_discount" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="visible" android:textSize="16dp" android:textColor="#A59D9D" android:text="" android:layout_below="@id/course_image" android:layout_toLeftOf="@id/img_rupee1" android:layout_marginRight="5dp"/>

  <ImageView android:layout_marginTop="10dp" android:id="@+id/img_rupee1" android:layout_height="10dp" android:layout_width="10dp" android:visibility="visible" android:src="@drawable/ic_rupee" android:layout_below="@id/course_image" android:layout_toLeftOf="@id/txt_actual_price"/>

  <TextView android:layout_marginTop="5dp" android:id="@+id/txt_actual_price" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="visible" android:textSize="16dp" android:textColor="#111" android:text="" android:layout_below="@id/course_image" android:layout_marginRight="10dp" android:layout_alignParentEnd="true"/>

  <ImageView android:id="@+id/img_lock" android:layout_height="25dp" android:layout_width="25dp" android:visibility="gone" android:src="@drawable/ic_money" android:layout_marginBottom="20dp" android:layout_below="@id/course_image" android:layout_marginRight="20dp" android:layout_alignParentEnd="true"/>

</RelativeLayout>


