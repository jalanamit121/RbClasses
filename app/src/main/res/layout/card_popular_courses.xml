<?xml version="1.0"?>

    <androidx.cardview.widget.CardView
    android:layout_marginTop="4dp"
    android:elevation="2dp"
    android:id="@+id/course_view"
    app:cardBackgroundColor="#fff"
    app:cardElevation="@dimen/card_itemcourse_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

  <!-- app:cardElevation="10dp"-->



  <RelativeLayout
      android:id="@+id/layout1"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:visibility="visible">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/course_image"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginBottom="5dp"
        android:elevation="1dp"
        app:civ_border_color="@color/edit_text"
        app:civ_border_width="0.5dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_businessman"
        android:layout_marginLeft="20dp"/>

  <TextView
      android:id="@+id/txt_course"
      android:layout_height="wrap_content"
      android:layout_width="200dp"
      android:layout_marginLeft="15dp"
      android:textSize="16sp"
      android:layout_marginTop="3dp"
      android:maxLines="2"
      android:ellipsize="end"
      android:layout_toRightOf="@id/course_image"
      android:textColor="#0A2773" />

  <ImageView
      android:id="@+id/img_rupee"
      android:layout_height="10dp"
      android:layout_width="10dp"
      android:layout_marginTop="5dp"
      android:visibility="visible"
      android:layout_marginStart="10dp"
      android:src="@drawable/ic_rupee"
      android:layout_marginLeft="15dp"
      android:layout_below="@id/txt_course"
      android:layout_toRightOf="@id/course_image"/>

  <TextView
      android:id="@+id/txt_discount"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:visibility="visible"
      android:textSize="14dp"
      android:textColor="#A59D9D"
      android:text=""
      android:layout_below="@id/txt_course"
      android:layout_toRightOf="@id/img_rupee"
      android:layout_marginRight="5dp"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/new_batch"
        android:layout_width="70dp"
        android:visibility="visible"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_height="30dp"
        android:src="@drawable/ezgifcomoptimize"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/live_class"
        android:layout_width="60dp"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/new_batch"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="30dp"
        android:src="@drawable/rblive"/>

  <ImageView
      android:id="@+id/img_rupee1"
      android:layout_height="10dp"
      android:layout_width="10dp"
      android:layout_marginTop="5dp"
      android:visibility="visible"
      android:src="@drawable/ic_rupee"
      android:layout_below="@id/txt_course"
      android:layout_toRightOf="@id/txt_discount"/>

  <TextView
      android:id="@+id/txt_actual_price"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:visibility="visible"
      android:textSize="14dp"
      android:textColor="#111"
      android:text=""
      android:layout_toRightOf="@id/img_rupee1"
      android:layout_below="@id/txt_course"
      android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/txt_free"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:textSize="14dp"
        android:textColor="#111"
        android:layout_marginStart="15dp"
        android:text=""
        android:layout_toRightOf="@id/img_rupee1"
        android:layout_below="@id/txt_course"
        android:layout_marginRight="10dp"/>


   <View
       android:id="@+id/view"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:visibility="visible"
       android:layout_marginTop="65dp"
       android:background="#ABDBF1"/>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:textSize="16sp"
        android:visibility="visible"
        android:textColor="@color/edit_text"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginTop="65dp"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:textColor="#E34463"
        android:textStyle="bold"/>
</RelativeLayout>


  <RelativeLayout
      android:id="@+id/today_classes"
      android:layout_height="120dp"
      android:layout_width="match_parent"
      android:visibility="gone"
      android:layout_marginBottom="10dp"
      android:background="@color/white">

  <TextView
      android:id="@+id/noclasses"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:textStyle="bold"
      android:textSize="16dp"
      android:textColor="@color/gradientViolet"
      android:text="No Course In Your Bucket"
      android:fontFamily="@font/proximanovaregular"
      android:layout_centerInParent="true"/>

</RelativeLayout>

</androidx.cardview.widget.CardView>