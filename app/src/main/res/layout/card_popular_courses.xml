    <androidx.cardview.widget.CardView android:layout_marginTop="7dp" android:elevation="2dp" android:id="@+id/course_view" app:cardBackgroundColor="#fff" app:cardElevation="@dimen/card_itemcourse_elevation" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent">

