<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".OtpVerficationActivity" android:background="@color/bg_color" android:padding="16dp" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


  <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="50dp" android:layout_alignParentTop="true" android:id="@+id/text_layout">

  <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/text_verificaion" android:textColor="#111" android:textStyle="bold" android:textSize="16sp" android:layout_marginStart="120dp" android:text="Verification Code"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="15dp" android:id="@+id/text_mobile" android:textColor="#111" android:textSize="16sp" android:layout_marginStart="30dp" android:text="Please Type the verification code sent to" android:layout_below="@id/text_verificaion"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="15dp" android:id="@+id/text_mobile2" android:textColor="#111" android:textSize="16sp" android:layout_marginStart="105dp" android:text="Registered Mobile no" android:layout_below="@id/text_mobile"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="15dp" android:id="@+id/text_mobile3" android:textColor="#111" android:textSize="16sp" android:layout_marginStart="105dp" android:text="" android:layout_below="@id/text_mobile2"/>

</RelativeLayout>

  <com.mukesh.OtpView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="12dp" android:id="@+id/otp_view" android:textColor="@android:color/white" android:layout_below="@id/text_layout" app:viewType="rectangle" app:lineColor="@color/colorPrimary" app:itemCount="6" android:itemBackground="#B6D0FC" android:layout_centerInParent="true" android:inputType="number"/>


  <LinearLayout android:background="@drawable/circularbluebordersolidmiddle" android:padding="18dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:id="@+id/edit_otp" android:layout_below="@id/text_layout" android:paddingRight="16dp" android:paddingLeft="16dp" android:visibility="gone" android:orientation="horizontal">

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/name" android:text="" android:visibility="gone"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/email" android:text="" android:visibility="gone"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/password" android:text="" android:visibility="gone"/>

  <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/mobile" android:text="" android:visibility="gone"/>

</LinearLayout>

  <Button android:background="@drawable/circularbluebordersolid" android:padding="16dp" android:layout_height="wrap_content" android:layout_width="150dp" android:layout_marginTop="24dp" android:id="@+id/buttonOtp" android:textColor="@color/white" android:text="Validate" android:layout_below="@id/otp_view" android:layout_centerInParent="true" android:fontFamily="@font/proximanovaregular" android:layout_marginBottom="14dp"/>

</RelativeLayout>